<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <com.cmcc.hyapps.andyou.widget.AutoScrollViewPager
            android:id="@+id/banner_pager"
            android:layout_width="match_parent"
            android:layout_height="205dp" />

        <com.cmcc.hyapps.andyou.widget.ScrollPoints
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/banner_pager"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/scenery_detail_funcs"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="15dp"
        android:background="@color/base_bg"
        android:orientation="horizontal">
        <!-- android:paddingLeft="@dimen/common_margin"-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/layer_list_top_right_bottom"
            android:layout_weight="1">

            <TextView
                android:id="@+id/home_tab_live"
                style="@style/home_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/home_live"
                android:text="@string/home_tab_live" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/layer_list_top_right_bottom"
            android:layout_weight="1">

            <TextView
                android:id="@+id/home_tab_strategy"
                style="@style/home_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/home_strategy"
                android:text="@string/home_tab_loacl_special" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/layer_list_top_bottom"
            android:layout_weight="1">

            <TextView
                android:id="@+id/home_tab_nav"
                style="@style/home_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/home_nav"
                android:text="@string/home_tab_hotel" />
        </RelativeLayout>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/home_recommand"
        android:text="@string/home_recommand"
        android:drawablePadding="8dp"
        android:textColor="@color/home_recommand"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"/>
</LinearLayout>